alias reload!='. ~/.zshrc'

alias cls='clear' # Good 'ol Clear Screen command
alias c='clear'
alias l='ls -la'

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

alias rm="rm -i"
alias cp='cp -i'
alias mv='mv -i'

alias df='df -h'
alias du='du -h -c'
alias mkdir='mkdir -p -v'
alias grep='grep --color=auto'
